<main class="container mx-auto mt-5">
  <br>
  <h1 class="block mx-auto mb-4 h-10 bg-teal-900 rounded-md text-white font-bold py-2 text-center">RESULTADOS</h1>
    <!-- Search Bar Section Below -->
<section class="flex justify-center">
  <div class="flex mb-10">
    <input
      id="search-input"
      type="text"
      placeholder="Â¡Busca a un animal perdido!"
      class="w-64 px-4 py-2 border border-lime-700 rounded-l-md focus:outline-none focus:border-yellow-500"
    />
    <button id="search-button" type="button" class="px-4 py-2 mx-auto bg-lime-700 text-white rounded-r-md focus:border-yellow-500">
      Buscar
    </button>
  </div>
</section>

<section class="text-center mx-auto mb-20">
<div class="grid mb-10 grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {{#each posts}}
<div class="w-full p-4 shadow-[5px_5px_rgba(0,_98,_90,_0.4),_10px_10px_rgba(0,_98,_90,_0.3),_15px_15px_rgba(0,_98,_90,_0.2),_20px_20px_rgba(0,_98,_90,_0.1),_25px_25px_rgba(0,_98,_90,_0.05)]">
  {{#if imageUrl}}
    <div class="flex justify-center items-center"> <!-- Added this div with flex styles -->
      <img src="{{imageUrl}}" alt="Imagen de animal encontrado" class="max-w-full min-h-80 max-h-[25vh] object-cover">
    </div>
  {{else}}
    <div class="flex justify-center items-center"> <!-- Added this div with flex styles -->
      <img src="/Assets/img/DogPlaceholder.svg" alt="Imagen de animal encontrado" class="max-w-full min-h-80 max-h-[25vh] object-cover">
    </div>
  {{/if}}
  <div class="shadow-md rounded-md p-4">
    <h2 class="text-lg font-semibold mb-2">
      <a href="/post/{{id}}" class="text-gray-900">{{title}}</a>
    </h2>
  </div>
</div>
    {{/each}}
  </div>
    </section>
</main>