<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Encontradogs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>
<body class="bg-light text-primary">
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Encontradogs</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home🐕🏠</a>
            </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Tus Publicaciones🦝</a>
              </li>
            {{#if logged_in}}
              <li class="nav-item">
                <a class="nav-link" href="#" id="hearthstone-logout">Salir🐰</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Entra a tu cuenta🐱</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Date de alta🐶</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    {{{body}}}
  </div>
  <script src="/js/deletePost.js"></script>
  <script src="/js/login.js"></script>
  <script src="/js/logout.js"></script>
  <script src="/js/newPost.js"></script>
  <script src="/js/signup.js"></script>
  <script src="/js/editPost.js"></script>
  <script src="/js/newComment.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
