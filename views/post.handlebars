<main class="container mt-5">
  <article>
    <h1 class="block mx-auto mb-4 h-10 bg-teal-900 rounded-md text-white py-2 text-center">{{title}}</h1>
    <div class="h-[50vh] flex items-center justify-center bg-black">
      <img src="{{imageUrl}}" alt="pet_picture" class="max-h-full w-auto">
    </div>
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-semibold text-gray-800">{{title}}</h2>
      <p class="text-sm text-gray-600">{{breed}} | {{location}} | {{category}} | {{size}} | {{color}}</p>
      <hr class="my-4 border-t-2 border-gray-300">
      <h3 class="text-xl text-gray-800">About</h3>
      <p class="text-gray-700">{{content}}</p>
      <p class="text-gray-600">Last seen on {{location}} at {{time}}</p>
      <p class="text-right text-sm">By {{User.username}} on {{format_date createdAt}}</p>
    </div>
  </article>
  {{#if logged_in}}
    <form class="new-pet-comment-form mb-3 mt-3">
      <div class="mb-3">
        <label for="comment" class="form-label text-dark">Agrega un comentario</label>
        <textarea
          class="form-control"
          id="content-new-pet-comment"
          rows="3"
          placeholder="Add a comment"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-warning">Enviar</button>
    </form>
  {{/if}}

<h2 class="text-2xl font-semibold mb-4">Comments</h2>

{{#each Comments}}
  <div class="comment mb-6 bg-white rounded-lg p-4 shadow-md relative">
    <p class="text-gray-800 text-lg">{{comment_text}}</p>
    <p class="text-gray-600 text-sm">By {{User.username}} on {{format_date createdAt}}</p>
    
    <!-- Delete Comment Button -->
    <button class="absolute top-2 right-2 text-red-500 hover:text-red-700" onclick="deleteComment('{{_id}}')">Delete</button>
  </div>
{{/each}}
</main>
